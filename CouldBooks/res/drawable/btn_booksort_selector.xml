<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击背景 -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="2dp" android:color="@color/theme_skin_blue" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape></item>
    <!-- 默认背景 -->
    <item><shape>
              <stroke android:width="1dp" android:color="@color/status_bar_bg" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape></item>

</selector>