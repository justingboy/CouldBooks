<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0.0"
                android:centerColor="#ff797979"
                android:centerY="0.75"
                android:endColor="#ff797979"
                android:startColor="#ff797979" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0.0"
                    android:centerColor="#ff2aa0f5"
                    android:centerY="0.75"
                    android:endColor="#ff2aa0f5"
                    android:startColor="#ff2aa0f5" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0.0"
                    android:endColor="#ff2aa0f5"
                    android:startColor="#ff2aa0f5" />
            </shape>
        </clip>
    </item>

</layer-list>