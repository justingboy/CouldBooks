<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_speech"
    android:background="@drawable/speech_bg_white"
    android:orientation="vertical" >

    <com.ios.radiogroup.SegmentedGroup
        android:id="@+id/segment_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_checked_text_color="#FF7F7F7F"
        segmentedgroup:sc_corner_radius="5dp"
        segmentedgroup:sc_tint_color="#FF535352" >

        <RadioButton
            android:id="@+id/speech_1"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/speech_2"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/speech_3"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="3"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/speech_4"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/speech_5"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="16sp" />
    </com.ios.radiogroup.SegmentedGroup>

</LinearLayout>