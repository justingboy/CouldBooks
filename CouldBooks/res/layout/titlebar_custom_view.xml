<?xml version="1.0" encoding="utf-8"?>
<com.ios.radiogroup.SegmentedGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/segment_update_network"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    segmentedgroup:sc_border_width="1dp"
    segmentedgroup:sc_checked_text_color="@color/status_bar_bg"
    segmentedgroup:sc_corner_radius="5dp"
    segmentedgroup:sc_tint_color="@android:color/white" >

    <RadioButton
        android:id="@+id/book_sort_horizontal"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="方块"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/book_sort_vertial"
        style="@style/RadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:text="竖排"
        android:textSize="16sp" />

</com.ios.radiogroup.SegmentedGroup>