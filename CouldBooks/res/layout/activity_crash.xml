<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/titlebar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_book_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:drawablePadding="25dp"
            android:drawableTop="@drawable/limit_nodata"
            android:gravity="center"
            android:text="不好意思,应用程序发生了错误！"
            android:textColor="@color/main_bottom_textcolor_default"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layodut_btm"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/layout_out"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_crash_left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退出应用"
                    android:textColor="#797373"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View 
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#dcdcdc" />

            <RelativeLayout
                android:id="@+id/layout_send"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_crash_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="发送错误报告"
                    android:textColor="#797373"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>