<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="2dp"
    android:paddingTop="8dp" >

    <TextView
        android:paddingRight="50dp"
        android:id="@+id/douban_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/status_bar_bg"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/douban_comment_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/douban_comment_name"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/douban_comment_image"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/douban_comment_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/douban_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/douban_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/douban_comment_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/douban_comment_image"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/more_arrow" />

</RelativeLayout>