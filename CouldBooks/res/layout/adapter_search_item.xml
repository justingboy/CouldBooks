<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="2dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/search_book_image"
        android:layout_width="72dp"
        android:layout_height="112dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/search_book_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_book_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/status_bar_bg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_book_author"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:paddingRight="5dp"
            android:id="@+id/search_book_summary"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/book_statue"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/story_state_finished" />

</RelativeLayout>