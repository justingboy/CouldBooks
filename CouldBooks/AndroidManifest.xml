    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.himoo.ydsc.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.himoo.ydsc.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StyledIndicators" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.SearchResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.FeedBackActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.PasswordLockActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.ReadstatisticsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.ThemeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.UpdateSettingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.BaiduDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>