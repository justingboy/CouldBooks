        <activity
            android:name="com.himoo.ydsc.activity.BookMarkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StyledIndicators" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.BaiduDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.FeedBackThemeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.more.PasswordSettingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.BookDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BookDetailsStyle" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.DoubanBookActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.himoo.ydsc.activity.DoubanCommentActivity"
            android:screenOrientation="portrait" >
